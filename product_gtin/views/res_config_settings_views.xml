<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="product.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='product_general_settings']" position="inside">
                <div
                    class="row mt16 o_settings_container"
                    id="product_gtin_general_settings"
                >
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="check_code_type_ean8" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="check_code_type_ean8" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="check_code_type_isbn10" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="check_code_type_isbn10" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="check_code_type_upc" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="check_code_type_upc" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="check_code_type_ean13" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="check_code_type_ean13" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
